<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_poster"
            android:layout_width="match_parent"
            android:layout_height="196dp"
            android:layout_margin="@dimen/default_16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_release"
            style="@style/AppTheme.TextView.Year"
            android:layout_width="wrap_content"
            android:layout_marginTop="@dimen/default_16dp"
            android:layout_marginRight="@dimen/default_16dp"
            android:text="Release"
            app:layout_constraintRight_toRightOf="@id/iv_poster"
            app:layout_constraintTop_toTopOf="@id/iv_poster" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/default_16dp"
            android:layout_marginTop="@dimen/default_16dp"
            android:layout_marginRight="@dimen/default_16dp"
            android:padding="@dimen/half_8dp"
            android:text="Category"
            app:layout_constraintLeft_toLeftOf="@id/iv_poster"
            app:layout_constraintRight_toRightOf="@id/iv_poster"
            app:layout_constraintTop_toBottomOf="@id/iv_poster" />

        <TextView
            android:id="@+id/tv_director"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_16dp"
            android:padding="@dimen/half_8dp"
            android:text="Director"
            app:layout_constraintLeft_toLeftOf="@id/tv_type"
            app:layout_constraintRight_toRightOf="@id/tv_type"
            app:layout_constraintTop_toBottomOf="@id/tv_type" />

        <TextView
            android:id="@+id/tv_title"
            style="@style/AppTheme.TextView.Title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/default_16dp"
            android:layout_marginBottom="@dimen/default_16dp"
            android:padding="@dimen/half_8dp"
            android:text="Title"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="@id/tv_type"
            app:layout_constraintRight_toRightOf="@id/tv_type"
            app:layout_constraintTop_toBottomOf="@id/tv_director"
            app:layout_constraintVertical_bias="0" />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>