<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Toolbar" parent="Theme.AppCompat">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TextView" />

    <style name="AppTheme.TextView.Title" parent="AppTheme.TextView">
        <item name="android:textColor">@color/year_text_color</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="AppTheme.TextView.Year" parent="AppTheme.TextView">
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/year_background</item>
        <item name="android:textColor">@color/year_text_color</item>
        <item name="android:textSize">@dimen/year_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/default_16dp</item>
        <item name="android:paddingTop">@dimen/half_8dp</item>
        <item name="android:paddingEnd">@dimen/default_16dp</item>
        <item name="android:paddingBottom">@dimen/half_8dp</item>
    </style>

</resources>
